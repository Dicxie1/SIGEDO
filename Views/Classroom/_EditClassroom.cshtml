@model Asistencia.Models.Classroom

<form id="editClassroomForm" asp-action="Update" method="post">
    <div class="modal-header">
        <h5 class="modal-title">Editar Aula: @Model.ClassroomName</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="ClassroomId" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="ClassroomName" class="form-control" required />
                    <label asp-for="ClassroomName" class="form-label">Nombre del Aula</label>
                    <span asp-validation-for="ClassroomName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Capacity" class="form-control" type="number" />
                    <label asp-for="Capacity" class="form-label">Capacidad</label>
                </div>
            </div>
        </div>
        <div class="mt-3 form-floating">
            <input asp-for="Location" class="form-control" />
            <label asp-for="Location" class="form-label">Ubicaci√≥n</label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    </div>
</form>
