@model Asistencia.Models.ViewModels.CourseDetailsViewModel
@{
    bool isHistory = Model != null && Model.attendanceHistories.Any(); 
}
<div class="row g-4 mb-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <h6 class="fw-bold mb-0 text-primary"><i class="fas fa-chart-line me-2"></i>Evolución de Asistencia</h6>
                <select class="form-select form-select-sm border-0 bg-light" style="width: auto;">
                    <option>Últimas 10 Sesiones</option>
                    <option>Todo el Semestre</option>
                </select>
            </div>
            <div class="card-body">
                <canvas id="attendanceTrendChart" style="max-height: 300px;"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <h6 class="fw-bold mb-0 text-dark">Resumen del Curso</h6>
            </div>
            <div class="card-body d-flex flex-column justify-content-center align-items-center position-relative">
                <div style="height: 200px; width: 200px;">
                    <canvas id="attendancePieChart"></canvas>
                </div>
                
                <div class="row w-100 mt-4 text-center small">
                    <div class="col-6 mb-2">
                        <span class="badge rounded-pill bg-success bg-opacity-10 text-success w-100">Presentes: @Model!.Stats.TotalPresents</span>
                    </div>
                    <div class="col-6 mb-2">
                        <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger w-100">Ausentes: @Model.Stats.TotalAbsents</span>
                    </div>
                    <div class="col-6">
                        <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning w-100">Tardanzas:@Model.Stats.TotalLates</span>
                    </div>
                    <div class="col-6">
                        <span class="badge rounded-pill bg-info bg-opacity-10 text-info w-100">Justificadas: @Model.Stats.TotalJustified</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
            <div class="card border-0 shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted small text-uppercase">
                            <tr>
                                <th class="ps-4">Fecha / Hora</th>
                                <th>Tema Tratado</th>
                                <th style="width: 25%;">Participación</th>
                                <th class="text-center">Resumen</th>
                                <th class="text-end pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if(isHistory){
                            foreach(var session in Model!.attendanceHistories){
                                // Lógica simple para color de barra
                                var percent = session.AttentancePercetage; 
                                var barColor = percent >= 80 ? "bg-success" : (percent >= 50 ? "bg-warning" : "bg-danger");
                        <tr>
                            <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light border rounded text-center p-2 me-3" style="min-width: 50px;">
                                                <div class="small fw-bold text-danger text-uppercase">@session.Date.ToString("MM")</div>
                                                <div class="h5 mb-0 fw-bold">@session.Date.Day</div>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">Clase #@session.AttendancesNumber</div>
                                                <small class="text-muted">@session.Date.ToString("dd/MM/yyyy")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="d-block text-truncate" style="max-width: 200px;" title="fundamentos de programacion">
                                            @(string.IsNullOrEmpty(session.Topic) ? "Sin tema registrado" : session.Topic)
                                        </span>
                                    </td>

                                    <td>
                                        <div class="d-flex justify-content-between small mb-1">
                                            <span class="fw-bold @(percent < 50 ? "text-danger" : "text-dark")"> @percent% Asistencia</span>
                                            <span class="text-muted">@session.PresentCount / @session.TotalStudents</span>
                                        </div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar @barColor rounded-pill" role="progressbar" style="width: @percent%;"></div>
                                        </div>
                                    </td>

                                    <td class="text-center">
                                        <span class="badge bg-success bg-opacity-10 text-success me-1" title="Presentes">@session.PresentCount P</span>
                                        <span class="badge bg-warning bg-opacity-10 text-warning me-1" title="Tardanzas">@session.LateCount T</span>
                                        <span class="badge bg-danger bg-opacity-10 text-danger" title="Ausentes">@session.AbsentCount A</span>
                                        <span class="badge bg-info bg-opacity-10 text-info" title="Ausentes">@session.JustifiedCount J</span>
                                    </td>

                                    <td class="text-end pe-4">
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-light rounded-circle" type="button" data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v text-muted"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("EditAttendance", "Attendance", new{courseid = Model.CourseId, attendance = session.Id})">
                                                        <i class="fas fa-edit me-2 text-warning"></i> Editar Asistencia
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("AttendanceDetail", "Attendance", new{courseid= Model.CourseId, attendance = session.Id})">
                                                        <i class="fas fa-eye me-2 text-primary"></i> Ver Detalle
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <button class="dropdown-item text-danger" onclick="deleteSession(@session.Id)">
                                                        <i class="fas fa-trash-alt me-2"></i> Eliminar Registro
                                                    </button>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                               </tr>
                               }
                               }else{
                                <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="opacity-50 mb-3">
                                        <i class="fas fa-clipboard-list fa-3x text-muted"></i>
                                    </div>
                                    <h6 class="text-muted fw-bold">No hay asistencias registradas aún</h6>
                                    <button class="btn btn-sm btn-primary mt-2" onclick="window.location.href='...'">
                                        Registrar la primera
                                    </button>
                                </td>
                            </tr>

                               
                            }
                    </tbody>
                </table>
            </div>
</div>

