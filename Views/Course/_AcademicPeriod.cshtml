@model List<AcademicPeriod>
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-0 text-gray-800 font-weigth-bold"> 
                Periodo Academico
            </h2>
            <p class="text-muted"> Administracion de ciclos acadmico, finalizados  y semestre activo </p>
        </div>
        <button class="btn btn-primary shadow-sm rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#createPeriodModal">
            <i class="fas fa-calendar-plus"></i> Crear
        </button>
    </div>
    @{
        var activePeriod = Model.FirstOrDefault(p => p.Status == EnumPeriodStatus.Active);
    }
    @if ( activePeriod != null)
    {
        <div class="alert alert-primary border-0 shadow-sm d-flex align-items-center mb-4 py-3" role="alert">
            <i class="bi bi-info-circle-fill fs-4 me-3"></i>
            <div>
                <strong>Current Active Period:</strong> @activePeriod.Name
                <span class="mx-2 text-primary-emphasis">|</span>
                Ends on: @activePeriod.EndPeriod.ToShortDateString()
            </div>
        </div>
    }
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover aling-middle mb-0">
                <thead class="ps-4">
                    <tr>
                        <th class="ps-4">Period Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderByDescending(x => x.StartPeriod))
                    {
                        
                        <tr class="@(item.Status == EnumPeriodStatus.Active ? "table-primary" : item.Status == EnumPeriodStatus.Planning ? "table-warning" : "")">
                            <td class="ps-4">
                                <span class="fw-bold d-block">@item.Name</span>
                                <small class="text-muted">Code: PER-@item.AcademicPeriodId</small>
                            </td>
                            <td>@item.StartPeriod.ToString("MMM dd, yyyy")</td>
                            <td>@item.EndPeriod.ToString("MMM dd, yyyy")</td>
                            <td>
                                @switch (item.Status)
                                {
                                    case EnumPeriodStatus.Active:
                                        <span class="badge rounded-pill bg-success-subtle text-success border border-success px-3">Active</span>
                                        break;
                                    case EnumPeriodStatus.Planning:
                                        <span class="badge rounded-pill bg-warning-subtle text-warning border border-warning px-3">Planning</span>
                                        break;
                                    case EnumPeriodStatus.Closed:
                                        <span class="badge rounded-pill bg-secondary-subtle text-secondary border border-secondary px-3">Closed</span>
                                        break;
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm">
                                    <a asp-action="ActivePeriod" asp-route-id="@item.AcademicPeriodId" class="btn btn-white btn-sm border" title="Edit">
                                        <i class="fas fa-pencil-square text-primary"></i>
                                    </a>
                                    <button class="btn btn-white btn-sm border" title="Archive" onclick="confirmArchive(@item.AcademicPeriodId)">
                                        <i class="fas fa-archive text-secondary"></i>
                                    </button>
                                    @if (item.Status == EnumPeriodStatus.Planning)
                                    {
                                        <button class="btn btn-white btn-sm border" title="Delete" onclick="deletePeriod(@item.AcademicPeriodId)">
                                            <i class="fas fa-trash text-danger"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="createPeriodModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <form asp-action="Create" method="post">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title fw-bold">Setup New Academic Period</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Period Name</label>
                        <input name="Name" class="form-control" placeholder="e.g. Fall Semester 2026" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label small fw-bold">Start Date</label>
                            <input type="date" name="StartPeriod" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label small fw-bold">End Date</label>
                            <input type="date" name="ENdPeriodñ" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Period</button>
                </div>
            </form>
        </div>
    </div>
</div>