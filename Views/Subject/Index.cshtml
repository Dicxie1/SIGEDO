        }

        // 1. GUARDAR CARRERA
        function saveCareer() {
            let CareerCode = document.getElementById('Code').value;
            let CareerName = document.getElementById('Name').value;
            
            if(!CareerCode || !CareerName) {
                Swal.fire('Atención', 'Complete los campos', 'warning');
                return;
            }
            const url = "@Url.Action("AddCareer", "Subject")"
            const data = { Code:CareerCode, Name:CareerName };
            console.log(`datos enviado:  ${JSON.stringify(data)}`)
            fetch(url, {
                method: 'POST',
                body: JSON.stringify(data),
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': getToken()
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire('Éxito', data.message, 'success').then(() => location.reload());
                } else {
                    Swal.fire('Error', data.message, 'error');
                }
            });
        }

        // GUARDAR ASIGNATURA (NUEVO)
        function saveSubject() {
