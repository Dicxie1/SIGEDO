            });
        }

        function loadCourses(subjectId, subjectName) {
        // 1. Preparar UI del Modal
        document.getElementById('modalSubjectNameTitle').innerText = subjectName;
        const tbody = document.getElementById('coursesTableBody');
        const loading = document.getElementById('loadingMessage');
        const empty = document.getElementById('emptyMessage');
        const modalElement = document.getElementById('coursesModal');
        
        // Limpiar tabla y mostrar loading
        tbody.innerHTML = '';
