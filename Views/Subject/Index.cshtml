        empty.style.display = 'none';


        // 3. Petición Fetch
        // Asegúrate que tu Controller tenga este método
        fetch(`/Subject/GetCourses?subjectId=${subjectId}`)
            .then(response => {
                if (!response.ok) throw new Error("Error en servidor");
                return response.json();
            })
            .then(data => {
                loading.style.display = 'none';
                if (data.success && data.courses && data.courses.length > 0) {    
                    // Recorremos los cursos recibidos
                    data.courses.forEach(curso => {
                        // Lógica para el switch (activo/inactivo)
                        const checked = curso.isActive ? 'checked' : '';
                        
                        const row = `
                            <tr>
                                <td><span class="fw-bold">${curso.academicYear}</span></td>
                                <td>
                                    <span class="badge bg-success rounded-pill">${curso.studentCount}</span>
                                </td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="switch-${curso.id}" ${checked} disabled>
                                    </div>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> Ver
                                    </button>
                                </td>
                            </tr>
                        `;
                        tbody.innerHTML += row;
                    });
                } else {
                    empty.style.display = 'block';
                }
            })
            .catch(error => {
                loading.style.display = 'none';
                tbody.innerHTML = '<tr><td colspan="4" class="text-danger text-center">Error al cargar datos</td></tr>';
                console.error(error);
            });
        }
